                        <text text="SBB simulation" font="Interface/Fonts/Default.fnt" height="100%" width="100%" color="#000000"/>
                    </panel>
                    <panel id="panel_system" height="10%" childLayout="center">
                        <control name="button" label="Start System" id="StartSystem" visibleToMouse="true">
