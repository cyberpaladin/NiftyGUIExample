    <screen id="system" controller="mygame.SystemScreenController">
        <layer id="system-background" childLayout="center">
            <image filename="Interface/start-background.jpg" width="90%" height="100%"></image>
        </layer>
        <layer id="system-foreground" childLayout="horizontal">
